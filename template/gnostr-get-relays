#gnostr --sec $(gnostr --hash) -t "active-relays" --envelope --content "$(gnostr get-relays)" | gnostr-relays
#gnostr --sec $(gnostr --hash) -t "active-relays" --envelope --content "$(gnostr get relays)" | gnostr-relays
